datasource db {
  provider = "sqlite"
  url = "file: ./dev/db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int         @id @default(autoincrement())
  username    String      @unique
  password    String  
  createAt    DateTime    @default(now())
  notes       Note[]
}

model Note {
  id          Int         @id @default(autoincrement())
  title       String
  body        String
  author      User        @relation(fields: [authorId], references: [id])
  authorId    Int
}